<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>Registro</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>
<!-- Agrega estilos CSS directamente en el HTML -->
<body>
    <!-- Mostrar el cuadro de mensaje flotante -->
    <div id="overlay"></div>
    <div id="message-container" class="message-container">
        <% if (typeof successMessage !== 'undefined') { %>
            <p><%= successMessage %></p>
            <button onclick="redirectToLogin()">Aceptar</button>
        <% } %>
    </div>
    <div class="login-container">
        <h1>Registro</h1>
        <form action="/register" method="post">
            <div class="input-group">
                <input type="text" id="username" name="username" placeholder="Usuario" autocomplete="off">
            </div>
            <div class="input-group">
                <input type="password" id="password" name="password" placeholder="Contraseña" autocomplete="off">
            </div>
            <button type="submit">Registrarse</button>
        </form>
        <p>¿Ya tienes una cuenta? <a href="/login">Inicia Sesión</a></p>
    </div>
    <% var successMessage = typeof successMessage !== 'undefined' ? successMessage : '' %>
    <script>
        // Función para redirigir al usuario al formulario de inicio de sesión
        function redirectToLogin() {
            window.location.href = '/login';
        }

        document.addEventListener('DOMContentLoaded', function () {
            // Verificar si el mensaje flash está presente y no está vacío
            var successMessage = '<%= successMessage %>';
            if (successMessage.length > 21) {
                // Cambiar el estilo del contenedor para mostrar el mensaje
                var messageContainer = document.getElementById('message-container');
                var overlay = document.getElementById('overlay');
                messageContainer.style.display = 'block';
                overlay.style.display = 'block';
            }
        });
      </script>
</body>
</html>